{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "安裝依賴套件",
            "type": "shell",
            "command": "pip install -r requirements.txt",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "安裝 PyInstaller",
            "type": "shell",
            "command": "pip install pyinstaller",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "建置執行檔",
            "type": "shell",
            "command": "pyinstaller build.spec --clean",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "dependsOn": ["安裝依賴套件", "安裝 PyInstaller"],
            "problemMatcher": []
        },
        {
            "label": "執行應用程式",
            "type": "shell",
            "command": "python main.py",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "清除建置產物",
            "type": "shell",
            "command": "rm -rf build dist __pycache__ **/__pycache__",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
